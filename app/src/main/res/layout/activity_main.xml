<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe9e9e9"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/text_analyse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="解析"
                android:textColor="#ff888888"
                android:layout_margin="5dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_source_code"
                android:text="源码"
                android:textColor="#ff888888"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff000000"
            android:text="0"
            android:textSize="62sp"
            android:ellipsize="start"
            android:singleLine="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/text_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff7a7a7a"
            android:ellipsize="start"
            android:singleLine="true"
            android:textSize="28sp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:layout_above="@id/text_result"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

    <TableLayout
        android:id="@+id/layout_table"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ffd1d1d1">

            <TextView
                android:text="C"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#ff9a9a9a"
                android:layout_width="0dp"
                android:layout_marginBottom="0.1dp"
                android:background="@drawable/btn_white_selector"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:id="@+id/text_clear" />

            <TextView
                android:text="Del"
                android:gravity="center"
                android:layout_marginLeft="0.1dp"
                android:layout_marginBottom="0.1dp"
                android:layout_weight="1"
                android:textColor="#ff9a9a9a"
                android:layout_width="0dp"
                android:background="@drawable/btn_white_selector"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:id="@+id/text_delete" />

            <TextView
                android:text="÷"
                android:textColor="#ff9a9a9a"
                android:gravity="center"
                android:layout_marginLeft="0.1dp"
                android:layout_marginBottom="0.1dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/btn_white_selector"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:id="@+id/text_div" />

            <TextView
                android:text="×"
                android:layout_marginLeft="0.1dp"
                android:layout_marginBottom="0.1dp"
                android:gravity="center"
                android:textColor="#ff9a9a9a"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/btn_white_selector"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:id="@+id/text_mul" />
        </TableRow>

        <TableRow
            android:background="#ffd1d1d1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:text="7"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#ff9a9a9a"
                android:layout_width="0dp"
                android:layout_marginBottom="0.1dp"
                android:background="@drawable/btn_white_selector"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:id="@+id/text_7" />

            <TextView
                android:text="8"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#ff9a9a9a"
                android:layout_width="0dp"
                android:layout_marginLeft="0.1dp"
                android:layout_marginBottom="0.1dp"
                android:background="@drawable/btn_white_selector"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:id="@+id/text_8" />

            <TextView
                android:text="9"
                android:textColor="#ff9a9a9a"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="0.1dp"
                android:layout_marginBottom="0.1dp"
                android:background="@drawable/btn_white_selector"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:id="@+id/text_9" />

            <TextView
                android:text="-"
                android:gravity="center"
                android:textColor="#ff9a9a9a"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="0.1dp"
                android:layout_marginBottom="0.1dp"
                android:background="@drawable/btn_white_selector"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:id="@+id/text_sub" />
        </TableRow>

        <TableRow
            android:background="#ffd1d1d1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:text="4"
                android:layout_marginBottom="0.1dp"
                android:background="@drawable/btn_white_selector"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#ff9a9a9a"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:id="@+id/text_4" />

            <TextView
                android:text="5"
                android:gravity="center"
                android:layout_marginLeft="0.1dp"
                android:layout_marginBottom="0.1dp"
                android:background="@drawable/btn_white_selector"
                android:layout_weight="1"
                android:textColor="#ff9a9a9a"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:id="@+id/text_5" />

            <TextView
                android:text="6"
                android:layout_marginLeft="0.1dp"
                android:layout_marginBottom="0.1dp"
                android:background="@drawable/btn_white_selector"
                android:textColor="#ff9a9a9a"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:id="@+id/text_6" />

            <TextView
                android:text="+"
                android:layout_marginLeft="0.1dp"
                android:layout_marginBottom="0.1dp"
                android:background="@drawable/btn_white_selector"
                android:gravity="center"
                android:textColor="#ff9a9a9a"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:id="@+id/text_add" />
        </TableRow>

        <TableRow
            android:background="#ffd1d1d1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:text="1"
                android:layout_marginBottom="0.1dp"
                android:background="@drawable/btn_white_selector"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#ff9a9a9a"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:id="@+id/text_1" />

            <TextView
                android:text="2"
                android:layout_marginLeft="0.1dp"
                android:layout_marginBottom="0.1dp"
                android:background="@drawable/btn_white_selector"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#ff9a9a9a"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:id="@+id/text_2" />

            <TextView
                android:text="3"
                android:layout_marginLeft="0.1dp"
                android:layout_marginBottom="0.1dp"
                android:background="@drawable/btn_white_selector"
                android:textColor="#ff9a9a9a"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:id="@+id/text_3" />

            <TextView
                android:text=" "
                android:layout_marginLeft="0.1dp"
                android:background="#ffff7435"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:id="@+id/text_null_equal" />
        </TableRow>

        <TableRow
            android:background="#ffd1d1d1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:text=" "
                android:background="#ffffffff"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#ff9a9a9a"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:id="@+id/text_null_0" />

            <TextView
                android:text="0"
                android:background="#ffffffff"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#ff9a9a9a"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:id="@+id/text_0" />

            <TextView
                android:text="."
                android:layout_marginLeft="0.1dp"
                android:background="@drawable/btn_white_selector"
                android:textColor="#ff9a9a9a"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:id="@+id/text_dot" />

            <TextView
                android:text="="
                android:layout_marginLeft="0.1dp"
                android:background="#ffff7435"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:id="@+id/text_equal" />
        </TableRow>

    </TableLayout>

</LinearLayout>
