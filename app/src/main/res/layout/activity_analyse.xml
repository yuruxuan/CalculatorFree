<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe9e9e9"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/tip"
            android:layout_centerHorizontal="true"
            android:maxLines="3"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff888888"
            android:text="点击屏幕中数字查看控件制作详情" />

        <TextView
            android:id="@+id/text_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff000000"
            android:text="30.0"
            android:textSize="62sp"
            android:ellipsize="start"
            android:singleLine="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/text_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff7a7a7a"
            android:ellipsize="start"
            android:singleLine="true"
            android:textSize="28sp"
            android:text="20+50-40="
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:layout_above="@id/text_result"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:layout_toLeftOf="@id/text_result"
            android:text="1"
            android:background="#ffff0000"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/text_tip1" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TableLayout
            android:id="@+id/layout_table"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#ffd1d1d1">

                <TextView
                    android:text="C"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#ff9a9a9a"
                    android:layout_width="0dp"
                    android:layout_marginBottom="0.1dp"
                    android:background="#ffffffff"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/text_clear" />

                <TextView
                    android:text="Del"
                    android:gravity="center"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:layout_weight="1"
                    android:textColor="#ff9a9a9a"
                    android:layout_width="0dp"
                    android:background="#ffffffff"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/text_delete" />

                <TextView
                    android:text="÷"
                    android:textColor="#ff9a9a9a"
                    android:gravity="center"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="#ffffffff"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/text_div" />

                <TextView
                    android:text="×"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:gravity="center"
                    android:textColor="#ff9a9a9a"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="#ffffffff"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/text_mul" />
            </TableRow>

            <TableRow
                android:background="#ffd1d1d1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:text="7"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#ff9a9a9a"
                    android:layout_width="0dp"
                    android:layout_marginBottom="0.1dp"
                    android:background="#ffffffff"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/text_7" />

                <TextView
                    android:text="8"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#ff9a9a9a"
                    android:layout_width="0dp"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:background="#ffffffff"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/text_8" />

                <TextView
                    android:text="9"
                    android:textColor="#ff9a9a9a"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:background="#ffffffff"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/text_9" />

                <TextView
                    android:text="-"
                    android:gravity="center"
                    android:textColor="#ff9a9a9a"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:background="#ffffffff"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/text_sub" />
            </TableRow>

            <TableRow
                android:background="#ffd1d1d1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:text="4"
                    android:layout_marginBottom="0.1dp"
                    android:background="#ffffffff"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#ff9a9a9a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/text_4" />

                <TextView
                    android:text="5"
                    android:gravity="center"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:background="#ffffffff"
                    android:layout_weight="1"
                    android:textColor="#ff9a9a9a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/text_5" />

                <TextView
                    android:text="6"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:background="#ffffffff"
                    android:textColor="#ff9a9a9a"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/text_6" />

                <TextView
                    android:text="+"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:background="#ffffffff"
                    android:gravity="center"
                    android:textColor="#ff9a9a9a"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/text_add" />
            </TableRow>

            <TableRow
                android:background="#ffd1d1d1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:text="1"
                    android:layout_marginBottom="0.2dp"
                    android:background="#ffffffff"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#ff9a9a9a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/text_1" />

                <TextView
                    android:text="2"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:background="#ffffffff"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#ff9a9a9a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/text_2" />

                <TextView
                    android:text="3"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:background="#ffffffff"
                    android:textColor="#ff9a9a9a"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/text_3" />

                <TextView
                    android:text=" "
                    android:layout_marginLeft="0.1dp"
                    android:background="#ffff7435"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/text_null_equal" />
            </TableRow>

            <TableRow
                android:background="#ffd1d1d1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="#ffffffff"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="3"
                        android:background="#ffff0000"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textColor="#ffffffff"
                        android:layout_alignParentRight="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:textSize="24sp"
                        android:id="@+id/text_tip3" />

                </RelativeLayout>

                <TextView
                    android:text="0"
                    android:background="#ffffffff"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#ff9a9a9a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/text_0" />

                <TextView
                    android:text="."
                    android:layout_marginLeft="0.1dp"
                    android:background="#ffffffff"
                    android:textColor="#ff9a9a9a"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:id="@+id/text_dot" />

                <TextView
                    android:text="="
                    android:layout_marginLeft="0.1dp"
                    android:background="#ffff7435"
                    android:gravity="center"
                    android:textColor="#ffffffff"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    android:id="@+id/text_equal" />
            </TableRow>

        </TableLayout>

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:text="2"
            android:layout_marginLeft="10dp"
            android:background="#ffff0000"
            android:textSize="20sp"
            android:id="@+id/text_tip2" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:layout_centerHorizontal="true"
            android:text="4"
            android:background="#ffff0000"
            android:textSize="20sp"
            android:id="@+id/text_tip4" />
    </RelativeLayout>
</LinearLayout>
